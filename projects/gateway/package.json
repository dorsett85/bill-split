{
  "name": "gateway",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rsbuild build",
    "build:prod": "pnpm build --mode=production",
    "dev": "node --env-file=.env --experimental-vm-modules --watch src/server/server.ts src/server/server.ts",
    "test": "vitest --config test/vitest.config.mts --project unit",
    "test:db": "vitest --config test/vitest.config.mts --project db",
    "type-check": "tsc",
    "prepreview": "pnpm build:prod",
    "preview": "node --env-file=.env --env-file=.env.prod src/server/server.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/lib-storage": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@mantine/core": "^8.3.10",
    "@tabler/icons-react": "^3.36.0",
    "formidable": "^3.5.4",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@rsbuild/core": "1.6.15",
    "@rsbuild/plugin-react": "1.4.2",
    "@testcontainers/postgresql": "^11.11.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/formidable": "^3.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.4",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "testcontainers": "^11.11.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2"
}
